{
    "godot.editorPath": "C:\\Users\\elija\\Desktop\\GoDot\\Godot_v4.4-stable_mono_win64\\Godot_v4.4-stable_mono_win64.exe",
    "godotTools.editorPath.godot4": "C:\\Users\\elija\\Desktop\\GoDot\\Godot_v4.4-stable_mono_win64\\Godot_v4.4-stable_mono_win64.exe",
    "godot.editor.port": 6007,
    "godot.editor.host": "127.0.0.1",
    "godot.editor.showOutputOnStart": true,
    "godot.editor.reconnectOnStart": true,
    "godot.lsp.serverPort": 6008,
    "godot.lsp.useDefaultHost": true,
    "godot.lsp.useDefaultPort": false,
    "godot.lsp.enableDiagnostics": true,
    "godot.lsp.enableSignatureHelp": true,
    "godot.lsp.enableHover": true,
    "godot.lsp.enableCompletions": true,
    "debug.openDebug": "openOnDebugBreak",
    "debug.internalConsoleOptions": "openOnSessionStart",
    "debug.console.closeOnEnd": false,
    "debug.showInStatusBar": "always",
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell",
            "path": "${env:windir}\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
            "args": [
                "-NoLogo",
                "-NoExit",
                "-ExecutionPolicy",
                "Bypass",
                "-Command",
                "Set-Location -LiteralPath '${workspaceFolder}'"
            ]
        }
    },
    "terminal.integrated.env.windows": {
        "GODOT_PATH": "${env:GODOT_PATH}",
        "PROJECT_ROOT": "${workspaceFolder}"
    },
    "terminal.integrated.cwd": "${workspaceFolder}",
    "terminal.integrated.shellArgs.windows": [],
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.enablePersistentSessions": false,
    "terminal.integrated.gpuAcceleration": "off",
    "terminal.integrated.windowsEnableConpty": false,
    "terminal.integrated.defaultLocation": "editor",
    "terminal.integrated.showExitAlert": false,
    "terminal.integrated.allowChords": false,
    "terminal.integrated.copyOnSelection": false,
    "terminal.integrated.environmentChangesIndicator": "off",
    "terminal.integrated.inheritEnv": true,
    "accessibility.signals.terminalBell": {
        "sound": "off"
    },
    "terminal.integrated.enableVisualBell": false,
    "problems.decorations.enabled": true,
    "problems.autoReveal": true,
    "godot.problemMatcher.watchFileRegex": "\\.gd$",
    "godot.problemMatcher.problemPattern": {
        "regexp": "^\\s*(.*):(\\d+):\\s+(.*)$",
        "file": 1,
        "line": 2,
        "message": 3,
        "severity": 4
    },
    "godot.lsp.checkOnSave": true,
    "godot.lsp.checkOnType": true,
    "godot.lsp.checkOnChange": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "files.associations": {
        "*.gd": "gdscript"
    },
    "gut-extension.command": "${config:godot.editorPath} --path ${workspaceFolder} --script res://tests/run_from_ide.gd",
    "gut-extension.singleTestCommand": "${config:godot.editorPath} --path ${workspaceFolder} --script res://tests/run_from_ide.gd --test",
    "gut-extension.testFilePattern": "test_*.gd",
    "gut-extension.testMethodPrefix": "test_",
    "gut-extension.testFolders": [
        "res://tests/unit",
        "res://tests/integration"
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit"
    }
}
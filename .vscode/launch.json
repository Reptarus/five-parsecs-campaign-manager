{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch (Select Scene)",
            "type": "godot-mono",
            "request": "launch",
            "mode": "executable",
            "preLaunchTask": "build",
            "executable": "C:\\Users\\elija\\Desktop\\GoDot\\Godot_v4.3-stable_win64.exe\\Godot_v4.3-stable_win64.exe",
            "executableArguments": [
                "--path",
                "",
                "SelectLaunchScene"
            ]
        },
        {
            "name": "Play in Editor",
            "type": "godot-mono",
            "mode": "playInEditor",
            "request": "launch"
        },
        {
            "name": "GDScript: Launch Project",
            "type": "godot",
            "request": "launch",
            "project": "${workspaceFolder}",
            "port": 6007,
            "address": "127.0.0.1",
            "launch_game_instance": true,
            "launch_scene": false,
            "debug_collisions": false,
            "debug_paths": false,
            "debug_navigation": false,
            "additional_options": "--debug-collisions --verbose",
            "scene_file": "",
            "debugServer": 6008,
            "debug_mode": true,
            "debug_output": true,
            "env": {
                "GODOT_DEBUG_ENABLED": "1",
                "GODOT_DEBUG_COLLISIONS": "1",
                "GODOT_PRINT_DEBUG_MESSAGES": "1"
            }
        },
        {
            "name": "Run GUT Tests",
            "type": "godot",
            "request": "launch",
            "project": "${workspaceFolder}",
            "port": 6007,
            "address": "127.0.0.1",
            "launch_game_instance": true,
            "launch_scene": true,
            "scene_file": "res://addons/gut/GutScene.tscn",
            "debug_mode": true,
            "debug_output": true,
            "additional_options": "--verbose --debug",
            "env": {
                "GODOT_DEBUG_ENABLED": "1",
                "GUT_TEST_MODE": "1"
            }
        },
        {
            "name": "Debug Current Test",
            "type": "godot",
            "request": "launch",
            "project": "${workspaceFolder}",
            "port": 6007,
            "address": "127.0.0.1",
            "launch_game_instance": true,
            "launch_scene": true,
            "scene_file": "res://addons/gut/GutScene.tscn",
            "debug_mode": true,
            "debug_output": true,
            "additional_options": "--verbose --debug",
            "env": {
                "GODOT_DEBUG_ENABLED": "1",
                "GUT_TEST_MODE": "1",
                "GUT_CURRENT_TEST": "${file}"
            }
        }
    ]
}